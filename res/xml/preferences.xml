<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Startup settings">
        <CheckBoxPreference
                android:key="startup_check_expired_data"
                android:title="Check for expired data"
                android:summaryOn="Check the installed data for expiry"
                android:summaryOff="Do not check the installed data for expiry"
                android:defaultValue="true" />
        <ListPreference
            android:key="startup_show_activity"
            android:title="Startup screen"
            android:entries="@array/startup_activity_entries"
            android:entryValues="@array/startup_activity_values"
            android:defaultValue="browse" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Search settings">
        <CheckBoxPreference
                android:key="search_limited_result"
                android:title="Show limited results"
                android:summaryOn="Show only limited results for a search"
                android:summaryOff="Show all results for a search (slower)"
                android:defaultValue="true" />
        <EditTextPreference
                android:key="search_result_limit"
                android:title="Search result limit"
                android:dependency="search_limited_result"
                android:numeric="integer"
                android:maxLength="2"
                android:defaultValue="20" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Location settings">
        <CheckBoxPreference
                android:key="location_use_gps"
                android:title="Use GPS for location"
                android:summaryOn="Use GPS-based accurate location"
                android:summaryOff="Use network-based coarse location"
                android:defaultValue="false" />
        <ListPreference
                android:key="location_nearby_radius"
                android:title="Nearby radius"
                android:entries="@array/nearby_radius_entries"
                android:entryValues="@array/nearby_radius_values"
                android:defaultValue="30" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Display settings">
        <CheckBoxPreference
                android:key="extra_runway_data"
                android:title="Show extra runway data"
                android:summaryOn="Show extended runway information"
                android:summaryOff="Show basic runway information"
                defaultValue="false" />
    </PreferenceCategory>
</PreferenceScreen>
