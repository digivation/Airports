<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Startup settings">
        <ListPreference
            android:key="startup_show_activity"
            android:title="Startup screen"
            android:entries="@array/startup_activity_entries"
            android:entryValues="@array/startup_activity_values"
            android:defaultValue="browse" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Search settings">
        <CheckBoxPreference
                android:key="search_limited_result"
                android:title="Show limited results"
                android:summaryOn="Show only limited results for a search"
                android:summaryOff="Show all results for a search (slower)"
                android:defaultValue="true" />
        <EditTextPreference
                android:key="search_result_limit"
                android:title="Search result limit"
                android:dependency="search_limited_result"
                android:numeric="integer"
                android:maxLength="3"
                android:defaultValue="25" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Location settings">
        <CheckBoxPreference
                android:key="location_use_gps"
                android:title="Use GPS for location"
                android:summaryOn="Using GPS-based accurate location"
                android:summaryOff="Using network-based coarse location"
                android:defaultValue="false" />
        <ListPreference
                android:key="location_nearby_radius"
                android:title="Nearby radius"
                android:entries="@array/nearby_radius_entries"
                android:entryValues="@array/nearby_radius_values"
                android:defaultValue="30" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Airport details">
        <CheckBoxPreference
                android:key="extra_runway_data"
                android:title="Show extra runway data"
                android:summaryOn="Show extended runway information"
                android:summaryOff="Show basic runway information"
                defaultValue="false" />
        <CheckBoxPreference
                android:key="show_gps_notams"
                android:title="Show GPS NOTAMs"
                android:summaryOn="GPS NOTAMs will also be shown"
                android:summaryOff="GPS NOTAMs will not be shown"
                defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Miscellaneous">
        <ListPreference
                android:key="phone_tap_action"
                android:title="Phone number taps"
                android:entries="@array/phone_tap_entries"
                android:entryValues="@array/phone_tap_values"
                android:defaultValue="dial" />
    </PreferenceCategory>
    <CheckBoxPreference
            android:key="auto_download_on_3G"
            android:title="Auto-download content on 3G/4G"
            android:summaryOn="Auto-download content on 3G/4G+wifi"
            android:summaryOff="Auto-download content on wifi only"
            defaultValue="false" />
    <CheckBoxPreference
            android:key="show_local_time"
            android:title="Use local timezone"
            android:summaryOn="Local time will be shown"
            android:summaryOff="UTC time will be shown"
            defaultValue="false" />
</PreferenceScreen>
