<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Search settings">
        <CheckBoxPreference
                android:key="search_limited_result"
                android:title="Show limited results"
                android:summaryOn="Show only first 20 results of a search"
                android:summaryOff="Show all results of a search (slower)"
                android:defaultValue="true" />
        <ListPreference
                android:key="search_airport_types"
                android:title="Airport types"
                android:summary="Airport types to include in search results"
                android:entries="@array/search_ownership_entries"
                android:entryValues="@array/search_ownership_values"
                android:defaultValue="PUBLIC" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Location settings">
        <CheckBoxPreference
                android:key="location_use_gps"
                android:title="Use GPS for location"
                android:summaryOn="Use GPS-based accurate location"
                android:summaryOff="Use carrier-based coarse location"
                android:defaultValue="false" />
        <ListPreference
                android:key="location_nearby_radius"
                android:title="Nearby radius"
                android:summary="Radius in miles for listing nearby facilities"
                android:entries="@array/nearby_radius_entries"
                android:entryValues="@array/nearby_radius_values"
                android:defaultValue="20" />
    </PreferenceCategory>
</PreferenceScreen>
