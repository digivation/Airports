<resources>
    <style name="FlatButton">
        <item name="android:background">@drawable/flat_button</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/button_color</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="TextSmall" parent="@android:style/TextAppearance.Small" />
    <style name="TextSmall.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextSmall.Red">
        <item name="android:textColor">#ffff0000</item>
    </style>
    <style name="TextMedium" parent="@android:style/TextAppearance.Medium" />
    <style name="TextMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextNormal">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>
    <style name="TextNormal.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Sherlock.Light.DarkActionBar"
            parent="@style/Theme.Sherlock.Light">
        <item name="abBackground">#ff404040</item>
        <item name="abTitleTextStyle">@style/LightBoldTitle</item>
        <item name="abSubtitleTextStyle">@style/LightSubtitle</item>
        <item name="abIcon">@drawable/ab_icon</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="vpiTabTextStyle">@style/CustomTabPageIndicator.Text</item>
    </style>
    <style name="LightBoldTitle" parent="@style/TextAppearance.Widget.Title">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="LightSubtitle" parent="@style/TextAppearance.Widget.Subtitle">
        <item name="android:textColor">#ffeeeeee</item>
    </style>
    <style name="CustomTabPageIndicator" parent="@style/Widget.TabPageIndicator">
        <item name="android:paddingTop">8dp</item>
    </style>
    <style name="CustomTabPageIndicator.Text"
            parent="@style/Widget.TabPageIndicator.Text">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">12dp</item>
    </style>
</resources>
