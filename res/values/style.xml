<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="FlatButton">
        <item name="android:background">@drawable/flat_button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/button_color</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#686868</item>
    </style>
    <style name="TextSmall.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextSmall.Red">
        <item name="android:textColor">#ffff0000</item>
    </style>
    <style name="TextMedium" parent="@style/TextSmall">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextLabel" parent="@style/TextSmall">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextLabel.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextNormal">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>
    <style name="TextNormal.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.Light.DarkActionBar" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="icon">@drawable/icon</item>
        <item name="android:icon">@drawable/icon</item>
    </style>
    <style name="ListItemActivated">
    </style>
</resources>
