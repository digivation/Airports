<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:paddingBottom="8sp"
     android:orientation="vertical">
     <TextView android:id="@+id/download_desc"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingLeft="4sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
     <TextView android:id="@+id/download_dates"
        android:textSize="12sp"
        android:paddingLeft="4sp"
        android:textColor="#ff00f0ff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <ProgressBar android:id="@+id/download_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:visibility="gone"
        android:paddingRight="4sp"
        android:paddingLeft="4sp"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="10dip" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:id="@+id/download_msg"
            android:textSize="12sp"
            android:paddingLeft="4sp"
            android:visibility="gone"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
        <TextView android:id="@+id/download_status"
            android:textSize="12sp"
            android:paddingRight="4sp"
            android:visibility="gone"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
    </LinearLayout>
 </LinearLayout>
 