<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/rwy_top_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <include layout="@layout/airport_title_layout" />
        <LinearLayout android:id="@+id/rwy_detail_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:paddingRight="12dp"
                android:paddingBottom="5dp"
                android:orientation="vertical">
            <TextView android:id="@+id/rwy_common_label"
                    style="@style/TextSmall.Bold"
                    android:padding="6dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            <TableLayout android:id="@+id/rwy_common_details"
                    android:background="@drawable/rounded_rectangle"
                    android:stretchColumns="0"
                    android:shrinkColumns="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/rwy_common_remarks"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_rectangle"
                    android:visibility="gone"
                    android:layout_marginTop="4dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
            </LinearLayout>
            <TextView android:id="@+id/rwy_base_end_label"
                    style="@style/TextSmall.Bold"
                    android:padding="6dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            <TableLayout android:id="@+id/rwy_base_end_details"
                    android:background="@drawable/rounded_rectangle"
                    android:stretchColumns="0"
                    android:shrinkColumns="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/rwy_base_end_remarks"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_rectangle"
                    android:visibility="gone"
                    android:layout_marginTop="4dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
            </LinearLayout>
            <TextView android:id="@+id/rwy_reciprocal_end_label"
                    style="@style/TextSmall.Bold"
                    android:padding="6dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            <TableLayout android:id="@+id/rwy_reciprocal_end_details"
                    android:background="@drawable/rounded_rectangle"
                    android:stretchColumns="0"
                    android:shrinkColumns="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/rwy_reciprocal_end_remarks"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_rectangle"
                    android:visibility="gone"
                    android:layout_marginTop="4dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
            </LinearLayout>
        </LinearLayout>
        <TextView android:id="@+id/rwy_detail_bottom_filler"
                android:height="12dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
