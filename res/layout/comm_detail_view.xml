<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/comm_detail_layout"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingTop="5dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <TextView android:id="@+id/airport_comm_label"
            style="@style/TextSmall.Bold"
            android:text="@string/airport_communications"
            android:padding="4dp"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    <LinearLayout android:id="@+id/airport_comm_details"
            android:orientation="vertical"
            android:background="@drawable/rounded_rectangle"
            android:visibility="gone"
            android:layout_marginBottom="6dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/atc_comm_label"
            style="@style/TextSmall.Bold"
            android:text="@string/atc_communications"
            android:padding="4dp"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    <LinearLayout android:id="@+id/atc_comm_details"
            android:orientation="vertical"
            android:background="@drawable/rounded_rectangle"
            android:layout_marginBottom="6dp"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/atc_phones_label"
            style="@style/TextSmall.Bold"
            android:text="@string/atc_phones"
            android:padding="4dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    <LinearLayout android:id="@+id/atc_phones_details"
            android:orientation="vertical"
            android:background="@drawable/rounded_rectangle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    <LinearLayout android:id="@+id/comm_remarks_layout"
            android:orientation="vertical"
            android:background="@drawable/rounded_rectangle"
            android:padding="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
</LinearLayout>
