<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/detail_view_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout android:id="@+id/detail_header_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_bar"
                android:padding="4dp"
                android:orientation="vertical">
            <TextView android:id="@+id/airport_title"
                    style="@style/TextMedium.Bold"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/airport_info"
                    style="@style/TextSmall.Bold"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/airport_info2"
                    style="@style/TextSmall"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingBottom="2dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/airport_info3"
                    style="@style/TextSmall"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingBottom="2dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout android:id="@+id/detail_content_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
	        <TextView android:id="@+id/detail_freq_label"
	                style="@style/TextSmall.Bold"
	                android:padding="6dp"
	                android:text="@string/frequencies"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content" />
	        <TableLayout android:id="@+id/detail_freq_layout"
	            android:background="@drawable/rounded_rectangle"
                android:stretchColumns="0,1"
                android:shrinkColumns="1"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content">
	        </TableLayout>
	        <TextView android:id="@+id/detail_rwy_label"
	                style="@style/TextSmall.Bold"
	                android:padding="6dp"
	                android:text="@string/runways"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content" />
	        <TableLayout android:id="@+id/detail_rwy_layout"
	            android:background="@drawable/rounded_rectangle"
                android:stretchColumns="0,1"
                android:shrinkColumns="1"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content">
	        </TableLayout>
	    </LinearLayout>
    </LinearLayout>
 </ScrollView>
 