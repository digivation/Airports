<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView android:id="@+id/e6b_label"
                android:textIsSelectable="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="left"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TableLayout
                android:background="@drawable/rounded_rectangle"
                android:stretchColumns="0,1"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/fuel_type"
                        android:textSize="18sp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                    android:paddingBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Spinner android:id="@+id/e6b_fuel_types"
                        android:layout_marginTop="-6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/total_fuel"
                        android:textSize="18sp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                    android:paddingBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText android:id="@+id/e6b_edit_total_fuel"
                        android:inputType="numberDecimal"
                        android:hint="@string/input_gal"
                        android:layout_marginTop="-8dp"
                        android:layout_marginLeft="6dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/total_weight"
                        android:textSize="18sp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                    android:paddingBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText android:id="@+id/e6b_edit_total_weight"
                        android:inputType="numberDecimal"
                        android:hint="@string/lbs"
                        android:layout_marginTop="-6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>
        <TextView android:id="@+id/e6b_msg"
                android:textIsSelectable="false"
                android:gravity="center"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
