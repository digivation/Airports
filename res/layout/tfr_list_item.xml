<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingLeft="@dimen/padding_left"
        android:paddingTop="@dimen/padding_top"
        android:paddingRight="@dimen/padding_right"
        android:paddingBottom="@dimen/padding_bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView android:id="@+id/tfr_agency"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/tfr_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toLeftOf="@id/tfr_agency"
            android:gravity="left"
            android:layout_marginRight="4dp"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/tfr_active"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@id/tfr_agency"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/tfr_time"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@id/tfr_name"
            android:gravity="left"
            android:layout_marginRight="4dp"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/tfr_type"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@id/tfr_time"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/tfr_altitudes"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:gravity="left"
            android:layout_marginRight="4dp"
            android:layout_below="@id/tfr_time"
            android:layout_toLeftOf="@id/tfr_type"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</RelativeLayout>
