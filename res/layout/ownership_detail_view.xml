<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="6dp"
        android:paddingRight="12dp"
        android:paddingBottom="6dp"
        android:orientation="vertical">
    <LinearLayout android:id="@+id/detail_ownership_type_layout"
            android:background="@drawable/rounded_rectangle"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginTop="6dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/detail_owner_label"
            style="@style/TextSmall.Bold"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/airport_owner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    <LinearLayout android:id="@+id/detail_owner_layout"
            android:background="@drawable/rounded_rectangle"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/detail_owner_phone_label"
            style="@style/TextSmall.Bold"
            android:padding="4dp"
            android:text="@string/phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    <LinearLayout android:id="@+id/detail_owner_phone_layout"
            android:background="@drawable/rounded_rectangle"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/detail_manager_label"
            style="@style/TextSmall.Bold"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/airport_manager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    <LinearLayout android:id="@+id/detail_manager_layout"
            android:background="@drawable/rounded_rectangle"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/detail_manager_phone_label"
            style="@style/TextSmall.Bold"
            android:padding="4dp"
            android:text="@string/phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    <LinearLayout android:id="@+id/detail_manager_phone_layout"
            android:background="@drawable/rounded_rectangle"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    <LinearLayout android:id="@+id/detail_remarks_layout"
            android:background="@drawable/rounded_rectangle"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
</LinearLayout>
