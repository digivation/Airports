<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_left"
            android:paddingTop="@dimen/padding_top"
            android:paddingRight="@dimen/padding_right"
            android:paddingBottom="@dimen/padding_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button android:id="@+id/btnViewGraphic"
                style="@style/FlatButton"
                android:text="@string/view_graphic"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <LinearLayout android:id="@+id/tfr_header_layout"
                android:background="@drawable/rounded_rectangle"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <TextView android:id="@+id/tfr_text_label"
                style="@style/TextSmall.Bold"
                android:layout_marginTop="0dp"
                android:padding="4dp"
                android:text="@string/tfr_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <TextView android:id="@+id/tfr_text_view"
                android:typeface="monospace"
                android:background="@drawable/rounded_rectangle"
                android:layout_marginTop="4dp"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <LinearLayout android:id="@+id/tfr_time_layout"
                android:background="@drawable/rounded_rectangle"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <TextView android:id="@+id/tfr_warning_text"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:textStyle="italic"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
