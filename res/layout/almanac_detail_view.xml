<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/almanac_top_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <include layout="@layout/airport_title_layout" />
        <LinearLayout android:id="@+id/almanac_content_layout"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView android:id="@+id/sunrise_sunset_label"
                    style="@style/TextSmall.Bold"
                    android:padding="6dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/morning_info_layout"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_rectangle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/sunrise_info_layout"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_rectangle"
                    android:layout_marginTop="6dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/sunset_info_layout"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_rectangle"
                    android:layout_marginTop="6dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/evening_info_layout"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_rectangle"
                    android:layout_marginTop="6dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/current_time_layout"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_rectangle"
                    android:layout_marginTop="6dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
    </LinearLayout>
</ScrollView>
