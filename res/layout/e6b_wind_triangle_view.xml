<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TableLayout
            android:background="@drawable/rounded_rectangle"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableRow
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/wind_speed"
                    android:textSize="18sp"
                    android:paddingLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <EditText android:id="@+id/e6b_wind_speed"
                    android:inputType="number"
                    android:layout_marginLeft="8dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/wind_dir"
                    android:textSize="18sp"
                    android:paddingLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <EditText android:id="@+id/e6b_wind_dir"
                    android:inputType="number"
                    android:layout_marginLeft="8dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/runway"
                    android:textSize="18sp"
                    android:paddingLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <EditText android:id="@+id/e6b_runway_id"
                    android:inputType="number"
                    android:layout_marginLeft="8dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />
        </TableRow>
        <View
                android:background="#ffc0c0c0"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        <TableRow
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/head_wind"
                    android:textSize="18sp"
                    android:paddingLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <EditText android:id="@+id/e6b_head_wind"
                    android:inputType="none"
                    android:layout_marginLeft="8dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/cross_wind"
                    android:textSize="18sp"
                    android:paddingLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <EditText android:id="@+id/e6b_cross_wind"
                    android:inputType="none"
                    android:layout_marginLeft="8dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>
</ScrollView>
